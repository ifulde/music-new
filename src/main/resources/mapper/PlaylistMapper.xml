<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.musicai.mapper.PlaylistMapper">
    <resultMap id="PlaylistResultMap" type="Playlist">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="userId" column="user_id"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO playlists (name, description, user_id, created_at)
        VALUES (#{name}, #{description}, #{userId}, #{createdAt})
    </insert>

    <select id="findById" resultMap="PlaylistResultMap">
        SELECT * FROM playlists WHERE id = #{id}
    </select>

    <select id="findByUserId" resultMap="PlaylistResultMap">
        SELECT * FROM playlists WHERE user_id = #{userId} ORDER BY created_at DESC
    </select>

    <update id="update">
        UPDATE playlists
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM playlists WHERE id = #{id}
    </delete>
</mapper>

